<% include ../partials/header%>
    <div class="row">
        <div class="col-md-12">
            <h1 style="text-align: center">Edit Profile</h1>
            <div style="width:30%; margin:25px auto; col-lg-3 col-md-4 col-sm-6 mb-4">
                <!--This will send inputs from name and image to the /campgrounds POST method-->
                <form action="/users/<%= user._id%>/?_method=PUT" method="POST">
                    <div class="form-group">
                       <label>Username</label>
                       <input class="form-control" type="text" name="user[username]" value="<%= user.username %>">
                    </div>
                    <div class="form-group">
                        <label>First Name</label>
                        <input class="form-control" type="text" name="user[firstName]" value="<%= user.firstName %>">
                    </div>
                    <div class="form-group">
                        <label>Last Name</label>
                        <input class="form-control" type="text" name="user[lastName]" value="<%= user.lastName %>">
                    </div>
                    <div class="form-group">
                        <label>E-mail</label>
                        <input class="form-control" type="email" name="user[email]" value="<%= user.email %>">
                    </div>
                    <div class="form-group">
                        <label>Avatar URL</label>
                        <input class="form-control" type="text" name="user[avatar]" value="<%= user.avatar %>">
                    </div>
                    <div class="form-group">
                        <label>About me</label>
                        <input class="form-control" type="text" name="user[about]" rows="4" cols="50" value="<%= user.about %>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Update</button>
                    </div>
                </form>
                <a href="/users/<%=user._id%>">Go Back</a>
            </div>
        </div>
    </div>
<% include ../partials/footer%>