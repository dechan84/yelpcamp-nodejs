<% include ../partials/header%>

    <div class="row">
        <div class="col-md-4">
            <h1><%= user.firstName + " " +user.lastName%></h1>
            <div class="thumbnail">
                <img src="<%= user.avatar %>" alt="user profile image">
                <div class="caption">
                    <a href="mailto:<%= user.email %>"><%= user.email %></a>
                </div>
            </div>
            <h2>About me</h2>
            <div>
                <p><%=user.about%></p>
            </div>
            <% if(currentUser && user._id.equals(currentUser._id) || currentUser && currentUser.isAdmin){ %>
            <div>
                <a class="btn btn-warning" href="/users/<%= user._id %>/edit">Edit</a>
            </div>
            <% }%>
        </div>
        <div class="col-md-8">
            <h3><%= user.username%>'s Campgrounds:</h3>
            <ul>
                <% campgrounds.forEach(function(campground){%>
                <!--.id is a getter method, pulls the id from _id and returns like string-->
                <li><a href="/campgrounds/<%= campground.id%>"><%= campground.name %></a></li>
                <% }); %>    
            </ul>
        </div>
        
    </div>

<% include ../partials/footer%>